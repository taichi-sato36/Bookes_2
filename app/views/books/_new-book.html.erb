

<h2>New book</h2>
<div class="row">

</div>
<%= form_for(book, url: '/books') do |f| %>
		<div class="field row">
			<label for="book_title">Title</label>

			<div class="col-xs-12">
				<%= f.text_field :title %>
			</div>
		</div>
		<div class="field row">
			<label for="book_opinion">Opinion</label>
			<div class="col-xs-12">
				<%= f.text_area :body %>
			</div>
		</div>
		<div class="actions row">
			<%= f.submit "Create Book" %>
		</div>
<% end %>