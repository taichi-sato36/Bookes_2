

<div class="body">
	<div class="container">
		<div class="row">
			<div class="col-xs-3">
				<%= render 'books/new-book', book: @book %>
			</div>
			<div class="col-xs-9">
				<h2>Books</h2>
				<table class="table table-hover table-inverse">
					<thead>
						<tr>
							<th></th>
							<th>Title</th>
							<th>Opinion</th>
							<th colspan="3"></th>
						</tr>
					</thead>
					<% @books.each do |book| %>
					<tbody>
						<tr>
							<td></td>
							<td><%= link_to book.title, book_path(book.id) %></td>
							<td><%= book.body %></td>
						</tr>
					</tbody>
					<% end %>
				</table>
			</div>
		</div>
	</div>
</div>



